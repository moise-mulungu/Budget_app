<p style="color: green"><%= notice %></p>

<h1>Payments</h1>

<div id="payments">
  <% @payments.each do |payment| %>
    <%= render payment %>
    <p>
      <%= link_to "Show this payment", payment, class: "btn btn-primary"%>
    </p>
  <% end %>
</div>

<%= link_to "New payment", new_payment_path, class: "btn btn-primary" %>
