<div class="login-page">
<%= link_to image_tag("back1.png", :class => "back-button" ), payments_path %>
  <h2 class="login-title">Payments</h2>
  <div class="actions login-button" >
  <%= link_to "Log out", destroy_user_session_path %>
  </div>
  <h1>New payment</h1>

<%= form_with(model: payment) do |form| %>
  <% if payment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.collection_select :category_id, current_user.categories, :id, :name, prompt: true %>
  </div>

  <div>
    <%= form.submit class:"btn btn-primary"%>
  </div>
<% end %>
</div>