<header class="header">
<div class="navbar">
<%= link_to image_tag("back1.png", :class => "nav-back-button" ), categories_path %>
  <h2 class="nav-title">New Category</h2>

  <%= link_to "Log out", destroy_user_session_path, :class => "nav-logout" %>
  </div>
</header> 


<%= form_with(model: category, :class => "category-form") do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="">
    <%= form.text_field :name, placeholder: "Name" %>
  </div>
  <div class="">
    <%= form.text_field :icon, placeholder: "Icon" %>
  </div>
  <div class="button-form">
    <%= form.submit :save %>
  </div>

<% end %>
</div>